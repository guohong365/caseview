<?xml version="1.0" encoding="utf-8"?>
<com.uc.android.widget.TuneOptionsLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_option_controls">
    <SeekBar
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_option_controls"
        android:id="@+id/option_seek_bar"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center">
            <ImageView
                android:layout_width="@dimen/size_option_icon"
                android:layout_height="@dimen/size_option_icon" app:srcCompat="@drawable/ic_brightness"
                android:id="@+id/btn_brightness"
                android:layout_weight="1" android:layout_margin="@dimen/margin_option_controls"/>
            <ImageView
                android:layout_width="@dimen/size_option_icon"
                android:layout_height="@dimen/size_option_icon" app:srcCompat="@drawable/ic_contrast"
                android:id="@+id/btn_contrast"
                android:layout_weight="1" android:layout_margin="@dimen/margin_option_controls"/>
            <ImageView
                android:layout_width="@dimen/size_option_icon"
                android:layout_height="@dimen/size_option_icon" app:srcCompat="@drawable/ic_saturation"
                android:id="@+id/btn_saturation" android:layout_weight="1"
                android:layout_margin="@dimen/margin_option_controls"/>
        </LinearLayout>
    </FrameLayout>
</com.uc.android.widget.TuneOptionsLayout>