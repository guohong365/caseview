<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="rotation_wheel_wrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/length_progress_wheel_line</item>
        <item name="android:layout_marginBottom">@dimen/length_progress_wheel_line</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:padding">@dimen/padding_progress_wheel</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="rotation_wheel">
        <item name="android:layout_width">@dimen/length_progress_wheel_line</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="rotation_wheel_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:rotation">-90</item>
    </style>

    <style name="scale_wheel_wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/length_progress_wheel_line</item>
        <item name="android:layout_marginEnd">@dimen/length_progress_wheel_line</item>
        <item name="android:padding">@dimen/padding_progress_wheel</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="scale_wheel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/length_progress_wheel_line</item>
    </style>
    <style name="scale_wheel_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="options_frame">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_option_controls</item>
        <item name="android:paddingBottom">@dimen/margin_option_controls</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="option_item">
        <item name="android:layout_width">@dimen/size_option_item</item>
        <item name="android:layout_height">@dimen/size_option_item</item>
        <item name="android:layout_margin">@dimen/padding_option_item</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="option_item.frame">
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="option_item.color">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="option_item.label">
        <item name="android:duplicateParentState">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>