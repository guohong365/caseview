<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_dev"
        android:layout_width="@dimen/action_size"
        android:layout_height="@dimen/action_size"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/xmjp_bob" />

    <ImageView
        android:id="@+id/icon_arrow_down"
        android:layout_width="@dimen/assist_icon_size"
        android:layout_height="@dimen/assist_icon_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:srcCompat="@drawable/ic_arrow_down_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/icon_dev"
        android:layout_toRightOf="@+id/icon_arrow_down"
        android:layout_toStartOf="@+id/icon_arrow_down"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_dev_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_dev_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="TextView" />
    </LinearLayout>
</RelativeLayout>