<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ctrl_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/dummy_content"
        android:padding="2dp"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/ctrl_image_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/selector_image_overlay" />

    <ImageView
        android:id="@+id/ctrl_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ctrl_image_view"
        android:layout_alignTop="@+id/ctrl_image_view"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/selector_check_box"
        android:contentDescription="@string/dummy_content"
        android:scaleType="fitCenter" />
</RelativeLayout>