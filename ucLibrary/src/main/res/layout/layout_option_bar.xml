<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/option_action_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_action_cancel"
        android:layout_alignParentStart="true" android:layout_margin="@dimen/margin_option_controls"
        android:layout_centerVertical="true"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/option_action_cancel"
        android:layout_toStartOf="@+id/option_action_apply"
        android:layout_centerVertical="true"
        android:id="@+id/option_controls">

    </FrameLayout>
    <ImageView
        android:id="@+id/option_action_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_action_accept"
        android:layout_alignParentEnd="true" android:layout_margin="@dimen/margin_option_controls"
        android:layout_centerVertical="true"/>
</merge>