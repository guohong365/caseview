<?xml version="1.0" encoding="utf-8"?>
<com.uc.caseview.layout.CompareItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/compare_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.uc.caseview.layout.CompareItemOverlay
        android:id="@+id/compare_item_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.uc.caseview.layout.CompareItemActionsOverlay
        android:id="@+id/tools_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/tools_box">

        <include layout="@layout/compare_item_options" />

        <ImageView
            android:id="@+id/tool_box_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/tools_box" />

        <SeekBar
            android:id="@+id/zoom_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />
    </com.uc.caseview.layout.CompareItemActionsOverlay>

</com.uc.caseview.layout.CompareItemLayout>